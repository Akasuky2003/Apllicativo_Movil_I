<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/fondo_06"
    tools:context=".LoginActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="50"
        android:paddingTop="20dp"
        app:srcCompat="@drawable/logo"
        tools:srcCompat="@drawable/logo"

        />

    <EditText
        android:id="@+id/edtUsuario"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="@string/user"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"

        android:layout_weight="9"
        android:drawableLeft="@drawable/usuario_5"
        android:drawablePadding="10dp"
        android:background="@drawable/edt_style"
        android:layout_marginBottom="15dp"
        android:padding="15dp"

        />

    <EditText
        android:id="@+id/edtContrasenia"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="@string/password"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"

        android:layout_weight="9"
        android:drawableLeft="@drawable/bloquear"
        android:drawablePadding="10dp"
        android:background="@drawable/edt_style"
        android:layout_marginBottom="20dp"
        android:padding="15dp"
        />

    <TextView
        android:id="@+id/tvErrorLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:gravity="center"
        android:textColor="#EF4646"
        android:visibility="gone" />

    <Button
        android:id="@+id/btnIngresarLogin"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="30dp"
        android:layout_weight="8"
        android:text="@string/ingresar"
        android:textColor="@color/blanco"
        android:background="@drawable/btn_style"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:gravity="center|top"
        android:layout_weight="20">

        <ImageButton
            android:id="@+id/imageButtonFacebook"
            android:layout_width="31dp"
            android:layout_height="31dp"
            android:layout_margin="5dp"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/facebook"
            tools:srcCompat="@drawable/facebook"
            android:scaleType="fitCenter"

            />

        <ImageButton
            android:id="@+id/imageButtonGoogle"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_margin="7dp"
            android:scaleType="fitCenter"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/google"
            tools:srcCompat="@drawable/google" />
    </LinearLayout>

    <TextView
        android:id="@+id/textViewRecordarPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/obtener_contraseÃ±a"
        android:textSize="15dp"
        />
</LinearLayout>